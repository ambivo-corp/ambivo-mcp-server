{
  "mcpServers": {
    "ambivo-local": {
      "comment": "Local stdio server (traditional approach)",
      "command": "python",
      "args": ["-m", "ambivo_mcp_server.server"],
      "env": {
        "AMBIVO_AUTH_TOKEN": "your-jwt-token-here"
      }
    },
    "ambivo-remote": {
      "comment": "Remote HTTP/SSE server via local bridge",
      "command": "python",
      "args": ["/path/to/http_sse_client_bridge.py"],
      "env": {
        "MCP_SERVER_URL": "https://your-cloud-server.com",
        "AMBIVO_AUTH_TOKEN": "your-jwt-token-here",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}